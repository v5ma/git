<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>minimal example</title>

  <script src="https://aframe.io/releases/1.0.3/aframe.min.js"></script>
<script>
  AFRAME.registerComponent('change-color', {
    schema: {
      color: {default: 'red'}
    },

    init: function () {
      var data = this.data;
      var el = this.el;  // <a-box>
      var defaultColor = el.getAttribute('material').color;

      el.addEventListener('mousedown', function () {
        el.setAttribute('color', data.color);
      });

      el.addEventListener('mouseup', function () {
        el.setAttribute('color', defaultColor);
      });
    }
  });
</script>
</head>
<body>
  <a-scene raycaster="objects: .clickable; showLine: false;"
             cursor="rayOrigin: mouse;">
    <a-box class="clickable" color="#EF2D5E" position="0 1 -4" change-color="color: blue"></a-box>

    <a-camera>
      <a-entity raycaster="objects: .clickable; showLine: false;"
             cursor="rayOrigin: mouse;"></a-entity>
    </a-camera>
  </a-scene>
</body>
</html>
